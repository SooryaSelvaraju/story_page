<h1> Create Response Comments</h1>
<div class="button"><%= link_to "Home", stories_path %></div>
<div class="container">
  <%= form_with model: @response_comment, path: response_comments_path, method: :post do |f| %>
    <h2>Response Comments</h2>
    <%= f.hidden_field :comment_id, value: @comment.id %>
    <div class="form">
      <label>Content</label>
      <%= f.text_field :content %>
    </div>
    <div class="form">
      <label>User</label>
      <%= f.text_field :user %>
    </div>
    <%= f.submit "Add Response Comment", class: "button" %>
  <% end %>
</div>